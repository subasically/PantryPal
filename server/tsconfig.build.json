{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"noImplicitReturns": false,
		"strict": false,
		"noImplicitAny": false,
		"skipLibCheck": true,
		"noEmit": false,
		"noEmitOnError": false,
		"incremental": true
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"dist",
		"coverage",
		"tests",
		"**/*.test.ts"
	],
	"ts-node": {
		"transpileOnly": true
	}
}